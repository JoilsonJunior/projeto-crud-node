<div class="estrutura p-5 rounded mt-3">
  <h1>Listar Usuários</h1>
  {{#if table}}
  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">#ID</th>
        <th scope="col">Nome</th>
        <th scope="col">E-mail</th>
        <th scope="col">Ações</th>
      </tr>
    </thead>

    <tbody>
      {{!-- #each - ele faz uma repetição das informações na tabela --}}
      {{#each usuarios}}
      <tr>
        <th scope="row">{{id}}</th>
        <td>{{nome}}</td>
        <td>{{email}}</td>
        <td>
          <div class="row g-1">
            <div class=" col-6 col-md-6">
              <form action="/editar" method="post">
                <input type="hidden" name="id" value="{{id}}">
                <button class="p-1 w-100 btn edit">
                  <i class="fa fa-edit"></i>
                </button>

              </form>

            </div>
            <div class="col-6 md-4">
              <button data-bs-toggle="modal" data-bs-target="#deleteModal_{{id}}" class="p-1 w-100 btn btn-danger">
                <i class="fa fa-trash"></i>
                </button>
            </div>
          </div>
        </td>
      </tr>
      <!-- Modal -->
      <div class="modal fade" id="deleteModal_{{id}}" tabindex="-1" aria-labelledby="exampleModalLabel"
        aria-hidden="true" data-bs-theme="dark">
        <div class="modal-dialog">
          <div class="modal-content">
            <div class="modal-header">
              <h1 class="modal-title fs-5" id="exampleModalLabel">Confirmação</h1>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Cancelar"></button>
            </div>
            <div class="modal-body fw-bold text-danger">
             Tem certeza que deseja deletar o usuário {{nome}}?
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
              <form action="/del" method="post">
                <input type="hidden" name="id" value="{{id}}"> {{!-- Campo oculto armazena ID--}}
                <button type="submit" class="btn btn-danger">Sim, quero deletar</button>
              </form>
            </div>
          </div>
        </div>
      </div>

      {{/each}}
      {{else}}
      <div class="card mt-4" data-bs-theme="dark">
        <div class="card-body">
          Nenhum dado encontrado!
        </div>
      </div>
    </tbody>
  </table>
  {{/if}}
</div>