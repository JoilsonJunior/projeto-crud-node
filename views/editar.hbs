{{! #unless - se trata se a condição for falsa }}
{{#unless error}}
  <div class="estrutura p-5 rounded mt-3">
    <h1>Alterar Usuário</h1>
    <form action="/update" method="post">
      <div class="mb-3 mt-4">
        <label for="exampleInputEmail1" class="form-label">Nome completo</label>
        <input type="hidden" name="id" value="{{id}}" />
        <input
          type="text"
          value="{{nome}}"
          class="form-control"
          id="nome"
          name="nome"
          placeholder="Digite seu nome completo"
          required
        />
      </div>
      <div class="mb-5">
        <label for="exampleInputPassword1" class="form-label">Endereço de E-mail</label>
        <input
          type="email"
          value="{{email}}"
          class="form-control"
          id="email"
          name="email"
          placeholder="Digite seu email"
          required
        />
      </div>
      <button type="submit" class="w-100 btn btn-success">Salvar Alterações</button>
    </form>
  </div>
{{else}}
  <div class="card bg-danger text-white">
    <div class="card-body">
      Houve um problema:
      {{problema}}
    </div>
  </div>
{{/unless}}